<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.example.gyphyclient.model.Data" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/trending_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:minHeight="?listPreferredItemHeightLarge"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trending_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageUrl="@{data.images.original.url}"
                app:urlSmallGif="@{data.images.fixed_height_small_still.smallImage}"
                app:hash="@{data.images.original.hash}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/share_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/selector_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_share"
                />

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/selector_buttons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/share_button"
                app:srcCompat="@drawable/ic_download"
                />

            <ImageView
                android:id="@+id/favorite_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/selector_buttons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/save_button"
                app:srcCompat="@drawable/ic_favorite"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>